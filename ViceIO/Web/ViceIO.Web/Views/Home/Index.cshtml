@{
    this.ViewData["Title"] = "Home";
}

<h1 class="text-center">Welcome, @User.Identity?.Name!</h1>
<hr />

<div class="row">
    <div class="col-md-4 mt-4">
        <div class="card">
            <img src="//4.bp.blogspot.com/-ADiNflnnTA8/X5-UtPNiIcI/AAAAAAAACtI/OJZcr5wpDZgERBdj_Eec13Ox8Y78xCmYACK4BGAYYCw/s1600/Piki%2BTemplates%2BJoke%2B%25287%2529.png" style="height: 350px" alt="jokes">
            <div class="card-body text-center">
                <hr />
                <p class="card-text">Our Jokes here.</p>
                <hr />
                <a asp-controller="Vices" asp-action="Create" class="btn btn-danger btn-sm">Create</a>
                <a asp-controller="Vices" asp-action="All" class="btn btn-primary btn-sm btn-pill">All</a>
                <a asp-controller="Vices" asp-action="Random" class="btn btn-primary btn-sm btn-pill">Random</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mt-4">
        <div class="card">
            <img src="https://lolfilter.com/files/thumbnails/331287034571370.png" style="height: 350px" alt="pictures">
            <div class="card-body text-center">
                <hr />
                <p class="card-text">Our Pictures here.</p>
                <hr />
                <a asp-controller="Pictures" asp-action="Create" class="btn btn-danger btn-sm">Create</a>
                <a asp-controller="Pictures" asp-action="All" class="btn btn-primary btn-sm btn-pill">All</a>
                <a asp-controller="Pictures" asp-action="Random" class="btn btn-primary btn-sm btn-pill">Random</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mt-4">
        <div class="card">
            <img src="https://i.pinimg.com/564x/20/20/c2/2020c25004af0ff7cf7f3186aa4e5618.jpg" style="height: 350px" alt="riddles">
            <div class="card-body text-center">
                <hr />
                <p class="card-text">Our Riddles here.</p>
                <hr />
                <a asp-controller="Riddles" asp-action="Create" class="btn btn-danger btn-sm">Create</a>
                <a asp-controller="Riddles" asp-action="All" class="btn btn-primary btn-sm btn-pill">All</a>
                <a asp-controller="Riddles" asp-action="Random" class="btn btn-primary btn-sm btn-pill">Random</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mt-4">
        <div class="card">
            <img src="https://i.pinimg.com/564x/fd/d6/46/fdd646896730d5e980851e468f5e25ed.jpg" style="height: 350px" alt="facts">
            <div class="card-body text-center">
                <hr />
                <p class="card-text">Our Facts here.</p>
                <hr />
                <a asp-controller="Facts" asp-action="Create" class="btn btn-danger btn-sm">Create</a>
                <a asp-controller="Facts" asp-action="All" class="btn btn-primary btn-sm btn-pill">All</a>
                <a asp-controller="Facts" asp-action="Random" class="btn btn-primary btn-sm btn-pill">Random</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mt-4">
        <div class="card">
            <img src="https://media.emailonacid.com/wp-content/uploads/2019/03/2019-GifsInEmail.gif" style="height: 350px" alt="gifs">
            <div class="card-body text-center">
                <hr />
                <p class="card-text">Our Gifs here.</p>
                <hr />
                <a asp-controller="Gifs" asp-action="Create" type="button" class="btn btn-danger btn-sm">Create</a>
                <a asp-controller="Gifs" asp-action="All" class="btn btn-primary btn-sm btn-pill">All</a>
                <a asp-controller="Gifs" asp-action="Random" class="btn btn-primary btn-sm btn-pill">Random</a>
            </div>
        </div>
    </div>
</div>
<hr />
