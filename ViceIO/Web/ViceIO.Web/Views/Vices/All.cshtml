@model ViceIO.Web.ViewModels.Vices.VicesListViewModel

@{
    this.ViewData["Name"] = "All Vices";
}

<h1>All Vices...</h1>
@foreach (var vice in this.Model.Vices)
{
    <div class="card col-md-4">
        <h5 class="card-title text-center">
            @*<a asp-action="ById" asp-route-id="@recipe.Id">
                    @recipe.ShortName@if (recipe.Name.Length > 20)
                                     {<text>...</text>}
                </a>*@

        </h5>
        <div class="card-body">
            <p class="card-text text-center">@vice.Content</p>
            <p class="card-text text-center">@vice.CategoryName</p>
            <p class="card-text text-center">@vice.AddedByUserEmail</p>
            <p class="card-text text-center"><small class="text-muted">@vice.CreatedOnAsString</small></p>
        </div>
    </div>
}